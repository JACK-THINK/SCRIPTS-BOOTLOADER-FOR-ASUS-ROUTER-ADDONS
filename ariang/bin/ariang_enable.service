#!/bin/sh
#
########## SET THE CUSTOM VARIABLES ##########
#
# 设置自定义变量
# 当该程序运行结束，此处设置的变量自动取消
#
# USB_MOUNT_POINT: The mount point of the USB flash drive
# 设置自定义变量USB_MOUNT_POINT为U盘挂载点
USB_MOUNT_POINT=$(nvram get script_usbmount | sed 's/\/script_bootloader.*//')
#
# SBL_SYS_USR: The directory which contains all the external software resources (add-ons) related to SCRIPTS-BOOTLOADER-FOR-ASUS-ROUTER
# 设置自定义变量SBL_SYS_USR为SCRIPTS-BOOTLOADER-FOR-ASUS-ROUTER系统外部软件资源目录，即插件目录
SBL_SYS_USR=${USB_MOUNT_POINT}/script_bootloader/usr
#
# PRIVATE_ROOT: The root directory for this program
# 设置自定义变量PRIVATE_ROOT为此程序根目录
PRIVATE_ROOT=${SBL_SYS_USR}/ariang
#
# PRIVATE_ETC: The directory which contains all the configuration files related to this program
# 设置自定义变量PRIVATE_ETC为此程序配置文件目录
PRIVATE_ETC=${PRIVATE_ROOT}/etc
#
# PRIVATE_USR: The directory which contains all the external software resources related to this program
# 设置自定义变量PRIVATE_USR为此程序外部软件资源目录
PRIVATE_USR=${PRIVATE_ROOT}/usr
#
# ARIANG_PID_FILE: The path to ariang.pid
# 设置自定义变量ARIANG_PID_FILE为文件ariang.pid的绝对路径
ARIANG_PID_FILE=/var/run/ariang.pid
#
# NAME OF THE SERVICE
# 服务名称
SERVICE_NAME="ARIANG"
#
# FUNCTION OF THE SERVICE
# 服务功能
SERVICE_FUNCTION="ENABLE"
#
########## END ##########
#
#
########## NOTIFICATION ##########
#
logger -st "($(basename $0))" $$ "*--------- ${SERVICE_NAME}_${SERVICE_FUNCTION} SERVICE ---------*"
#
########## END ##########
#
#
########## CHECK AND ENABLE ARIANG ##########
#
# Check if ${PRIVATE_ETC}/ariang_lighttpd.conf exists
# 检查文件${PRIVATE_ETC}/ariang_lighttpd.conf是否存在
if [ -e "${PRIVATE_ETC}/ariang_lighttpd.conf" ]
then
    logger -st "($(basename $0))" $$ "***** ARIANG CONFIGURATION FILE EXISTS *****"
    #
    # Load ariang
    # 如果文件${PRIVATE_ETC}/ariang_lighttpd.conf存在，则执行
    nohup lighttpd -f ${PRIVATE_ETC}/ariang_lighttpd.conf &> /dev/null &
    #sleep 5
    #PID=$(ps | grep 'ariang' | grep -v 'grep' | awk '{print $1}')
    #echo ${PID} > ${ARIANG_PID_FILE}
    #
    logger -st "($(basename $0))" $$ "***** ${SERVICE_NAME}_${SERVICE_FUNCTION} SERVICE HAS BEEN LOADED *****"
    #
else
    # Do nothing but prompt the user
    # 如果文件${PRIVATE_USR}/ariang或${PRIVATE_ETC}/config.xml不存在，则执行
    logger -st "($(basename $0))" $$ "***** UNABLE TO LOCATE ARIANG CONFIGURATION FILE *****"
    logger -st "($(basename $0))" $$ "***** ${SERVICE_NAME}_${SERVICE_FUNCTION} SERVICE HAS NOT BEEN LOADED *****"
fi
#
########## END ##########