#!/bin/sh
#
########## CHECK ASUS ROUTER MODEL ##########
#
ROUTER_MODEL=$(nvram get model)
#
########## END ##########
#
#
########## SET THE CUSTOM VARIABLES ##########
#
# 设置自定义变量
# 当该程序运行结束，此处设置的变量自动取消
#
# NAME OF THE SERVICE
# 服务名称
SERVICE_NAME="DDNS"
#
# FUNCTION OF THE SERVICE
# 服务功能
SERVICE_FUNCTION="INSTALLATION"
#
########## END ##########
#
#
########## NOTIFICATION ##########
#
logger -st "($(basename $0))" $$ "*--------- ${SERVICE_NAME} ON ${ROUTER_MODEL} ${SERVICE_FUNCTION} ---------*"
#
########## END ##########
#
#
########## INSTALL DDNS ##########
#
# Check if ENTWARE_ENABLE SERVICE and MAILX SERVICE have been loaded
# 检查ENTWARE_ENABLE SERVICE和MAILX SERVICE是否已启用
if [ $(which opkg) == "/opt/bin/opkg" ] && [ -e "/opt/bin/mailx" ]
then
    logger -st "($(basename $0))" $$ "***** ENTWARE_ENABLE SERVICE AND MAILX SERVICE HAVE BEEN LOADED *****"
    #
    # Update the list of available packages
    # 更新可用程序包列表
    opkg update
    #
    # Install curl
    # 安装curl
    opkg install curl
    #
    logger -st "($(basename $0))" $$ "***** ${SERVICE_FUNCTION} HAS BEEN COMPLETE *****"
    #
else
    # Do nothing but prompt the user
    # 如果ENTWARE_ENABLE SERVICE或MAILX SERVICE未启用，则执行
    logger -st "($(basename $0))" $$ "***** ENTWARE_ENABLE SERVICE OR MAILX SERVICE HAS NOT BEEN LOADED *****"
    logger -st "($(basename $0))" $$ "***** PLEASE ENABLE ENTWARE FIRST AND THEN INSTALL MAILX *****"
    logger -st "($(basename $0))" $$ "***** ${SERVICE_FUNCTION} HAS NOT BEEN COMPLETE *****"
fi
#
########## END ##########